  }

  $form['email'] = array(
    '#type' => 'textfield',
    '#size' => 30,
    '#attributes' => array(
      'placeholder' => t('E-mail address'),
      'title' => t('E-mail address'),
      'class' => array('btn-light-white'),
     ),
    '#theme_wrappers' => array(),
