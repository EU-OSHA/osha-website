function osha_newsletter_create_node($title, $type = 'newsletter_article') {
  global $user;
  $node = new stdClass();
  $node->title = $title;
  $node->type = $type;
  node_object_prepare($node);
  $node->language = 'en';
  $node->uid = $user->uid;
  $node->status = 1;
  $node->promote = 0;
