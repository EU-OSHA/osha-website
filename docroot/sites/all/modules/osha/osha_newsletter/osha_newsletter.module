    if (user_is_anonymous() && $node->type == 'blog') {
      $form = array();
      $link = l(
        t('Subscribe'),
        variable_get('subscribe_block_newsletter_page_url', OSHA_NEWSLETTER_PAGE_URL),
        array(
          'attributes' => array('class' => 'button-submit'),
        )
      );
      $form['submit'] = array(
        '#type' => 'item',
        '#markup' => $link,
      );
