  if ($key == 'notifyNodeIsReadyToPublish') {
    $subject = variable_get('osha_mail_template_approval_subject', '[OSHA Website] CMW: ([node:nid]) [node:title-field]');
    $body = variable_get('osha_mail_template_approval_body',
      'Dear [user:name],
